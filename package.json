{
  "name": "@init-kz/init-code-highlight-ts",
  "version": "1.0.6",
  "description": "A micro code-editor for awesome web pages",
  "homepage": "https://init.kz/en",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/init-pkg/init-code-highlight-ts.git"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "serve": "http-server -p 8080",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "Code",
    "Highlight",
    "Prismjs",
    "code-editor",
    "syntax-highlight",
    "highlight"
  ],
  "author": "INIT.KZ",
  "license": "MIT",
  "maintainers": [
    {
      "name": "Sauyrbai Imangali",
      "url": "https://github.com/Imangali-Sauyrbay"
    }
  ],
  "peerDependencies": {
    "prismjs": "^1.30.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@types/prismjs": "^1.26.5",
    "http-server": "^14.1.1",
    "prismjs": "^1.30.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "bugs": {
    "url": "https://github.com/init-pkg/init-code-highlight-ts/issues"
  }
}
